<%- contentFor('styles') %>
<link rel="stylesheet" href="/stylesheets/forms.css">

<%- contentFor('body') %>
<a href="/" class="p-2 position-absolute">&laquo; Back to home page</a>
<main>
	<form class="form-signin text-center card" action="/users/login" method="POST">
		<h1 class="h3 mb-5 font-weight-normal">Sign in</h1>
		<% include ./partials/messages.ejs %>

		<label for="inputEmail" class="sr-only">Email address</label>
		<input type="email" id="inputEmail" class="form-control mb-3" name="email" placeholder="Email address" required
			autofocus>

		<label for="inputPassword" class="sr-only">Password</label>
		<input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>

		<button class="btn btn-lg btn-primary btn-block mb-3" type="submit">Sign in</button>
		<p>Dont have an account? <br><a href="/users/register">Register now</a></p>
	</form>
</main>
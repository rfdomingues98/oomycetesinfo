<%- contentFor('header') %>
<header>
	<h1 class="page-title text-center mt-5"><%= title %></h1>
</header>

<%- contentFor('body') %>
<div class="container-fluid">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover mt-5">
			<thead class="thead-dark">
				<th scope="col">Primer</th>
				<th scope="col">Sequence</th>
				<th scope="col">Sites/Articles</th>
				<th scope="col">BLAST Results</th>
				<th scope="col">Notes</th>
			</thead>
			<tbody>
				<% for(i in data) { %>
				<tr>
					<th scope="row"><%= data[i].primer %></th>
					<td><%= data[i].sequence %></td>
					<td>
						<% for(j in data[i].articles) { %>
						<% if (data[i].articles[j].pdf) { %>
						<a href="/file?id=<%= data[i].articles[j].link %>"
							target="_blank"><%= data[i].articles[j].name %></a>
						<% } else { %>
						<a href="<%= data[i].articles[j].link %>" target="_blank"><%= data[i].articles[j].name %></a>
						<% } %>
						<% if (j != Object.keys(data[i].articles).length -1) { %>
						<hr>
						<% } %>
						<% } %>
					</td>
					<td><%= data[i].blast %></td>
					<td>
						<% for(j in data[i].notes) { %>
						<%= data[i].notes[j].note %>
						<% if (j != Object.keys(data[i].notes).length -1) { %>
						<hr>
						<% } %>
						<% } %>
					</td>
				</tr>
				<% } %>
			</tbody>
		</table>
	</div>
	<a href="/" class="btn btn-primary my-3">Go back</a>
</div>